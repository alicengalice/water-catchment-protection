<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <title>@ViewBag.Title - H2rescueO</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        html, body {
            height: 100%;
        }

        #my1Btn {
            position: fixed;
            bottom: 15px;
            right: 15px;
            z-index: 99;
            font-size: 18px;
            border: none;
            outline: none;
            
            color: white;
            cursor: pointer;
            padding: 10px;
            border-radius: 99px;
        }

            #my1Btn:hover {
                background-color: #555;
            }
    </style>





</head>
<body>

    <button class="btn btn-primary" onclick="location.href = '#top';" id="my1Btn" title="Go to top">Top</button>
    <div class="navbar navbar-inverse navbar-static-top .navbar-brand .navbar-toggle" style="margin-bottom:0; " id="top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Home" style=" color: white; font-weight: bold; font-size: larger;">

                    <img src="~/Assets/logo2.png" width="105" alt="" class="d-inline-block align-middle mr-2" />
                </a>


            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav " id="navbar" style="font-weight: 600; font-size:0.8em !important;">

                    <li class='@Html.IsActive("Home", "Index")'>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>


                    <li class='@Html.IsActive("Tips", "Index")'>
                        @Html.ActionLink("Tips", "Index", "Tips")
                    </li>

                    <li class='@Html.IsActive("Home", "Calculator")'>
                        @Html.ActionLink("Calculator", "Calculator", "Home")
                    </li>

                    <li class='@Html.IsActive("Home", "Quiz")'>
                        @Html.ActionLink("Quiz", "Quiz", "Home")
                    </li>

                    <li class="dropdown show">
                        <a class=" dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Resources
                        </a>
                        <div class="dropdown-menu" style="text-align: center; background-color:#333; " aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" style="color: white;" href="~/Home/WaterJourney">Water Journey</a>
                            <a class="dropdown-item" style="color: white;" href="~/Home/MoreInfo">Consumption Facts</a>
                            <a class="dropdown-item" style="color: white;" href="~/Home/Pollution">Pollution Facts</a>
                            <a class="dropdown-item" style="color: white;" href="~/Home/Video">Videos</a>
                            <a class="dropdown-item" style="color: white;" href="~/Home/Game">Game</a>
                            <a class="dropdown-item" style="color: white;" href="~/Home/About">About</a>
                            <a class="dropdown-item" style="color: white;" href="~/Home/Reference">References</a>


                        </div>
                    </li>


                </ul>

            </div>
        </div>
    </div>

    @RenderBody()






    <footer id="footer" class="footer-1" style="position: relative; clear: both;">
        <div class="main-footer widgets-dark typo-light">
            <div class="container">
                <div class="row">

                    <div class="col-xs-12 col-sm-12 col-md-6">
                        <div class="widget subscribe no-box">
                            <h5 class="widget-title">CreekTechMel</h5>
                            <p>Let’s meet up in real life to share in the beauty of the natural world.</p>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-3">
                        <div class="widget no-box">
                            <h5 class="widget-title">Quick Links</h5>
                            <ul class="thumbnail-widget">
                                <li>

                                    <div class="thumb-content"><a href="~/Home">Home</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="~/Home/WaterJourney">WaterJourney </a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="~/Tips">Tips</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="~/Home/Calculator">Calculator</a></div>
                                </li>

                                <li>
                                    <div class="thumb-content"><a href="~/Home/Quiz">Quiz</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="~/Home/Video">Videos</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="~/Home/About">About</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="~/Home/Reference">References</a></div>
                                </li>

                            </ul>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-3">
                        <div class="widget no-box">
                            <h5 class="widget-title">Get Started</h5>
                            <p>Everyone is responsible for protecting our water<p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <p>&copy; @DateTime.Now.Year - CreekTechMel</p>
                    </div>
                </div>
            </div>
        </div>

    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")



    @RenderSection("scripts", required: false)

</body>
</html>
