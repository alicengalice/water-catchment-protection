@{
    ViewBag.Title = "Quiz";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

}

<head>
    <style>
        body {
            background-position: center center;
            background-size: cover;
        }
    </style>
    <title>Quiz App</title>


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/wireframe.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/qstyle.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />

    <!-- Font stylesheet -->
    <link href="https://fonts.cdnfonts.com/css/komika-hand" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font stylesheet -->
</head>
<body>
    <div class="col-12" style="        background-image: url('../Assets/book.jpg');
        background-position: center center;
        background-size: cover;
        padding: 0px;
        height: 12%;">

        <div class="col-12" style="background-color:rgba(45,45,45,0.3); width:100%; height:100%;">
            <div class="row">


            </div>
        </div>
    </div>
    <div style="font-family: 'Quicksand', sans-serif; font-weight:500; ">


        <!--First display on screen -->
        <div class="home-box box-shadow" style="height:500px;">
            <h3>Instruction</h3>
            <p>You will need to answer <span class="total-questions"></span> questions about how to protect the water!</p>
            <button type="button" class="btn" onclick="startQuiz()">Start Quiz</button>
            <a href="/" class="back" style="float: right; margin-top: 8%; padding: 0;">« Back to Home</a>
        </div>
        <!--Quiz content box -->
        <div class="quiz-box home-box hide box-shadow">
            <div class="question-number">

            </div>
            <div class="question-text">
            </div>
            <div class="option-container">

            </div>
            <div class="explain-text">
            </div>

            <div class="next-question-btn" style="float: left;">
                <button id="nextbtn" type="button" class="btn" onclick="next()" style="visibility: hidden;">Next</button>
            </div>
            <div class="answer-indicator">

            </div>
            <button type="button" class="btn" onclick="goToHome()" style="float: right;">Restart the Quiz</button>

            <a href="/" class="back" style="float: right;padding: 0;width: 100%;text-align: end;">« Back to Home</a>

        </div>
        <!--Quiz result -->
        <div class="result-box home-box hide box-shadow" style="height:400px;">
            <h1 style="font-weight:bolder">Quiz Result</h1>
            <div class="col-lg-12" style="margin:60px auto;">
                <div style="font-weight:bold;"><a>Your Total Score: </a> <span class="total-score"></span></div>
                <br>
                <div style="font-weight:bold;"><div colspan="2" class="comment" style="text-align: center;"></div></div>
            </div>
            <table style="display:none;">
                <tr>
                    <td>Total Questions</td>
                    <td><span class="total-question"></span></td>
                </tr>
                <tr>
                    <td>Attempts</td>
                    <td><span class="total-attempt"></span></td>
                </tr>
                <tr>
                    <td>Correct</td>
                    <td><span class="total-correct"></span></td>
                </tr>
                <tr>
                    <td>Wrong</td>
                    <td><span class="total-wrong"></span></td>
                </tr>
                <tr>
                    <td>Percentage</td>
                    <td><span class="percentage"></span></td>
                </tr>
                <tr>
                    <td>Your Total Score</td>
                    <td></td>
                </tr>
                <tr>
                    <td colspan="2" class="comment" style="text-align: center;"></td>
                </tr>
            </table>
            <button type="button" class="btn" onclick="tryAgainQuiz()">Try Again</button>
            <button type="button" class="btn" onclick="location.href='/';">Go To Home</button>
        </div>


        <script src="~/Scripts/question-update.js"></script>
        <script src="~/Scripts/app.js"></script>
    </div>
</body>


<script>
    var header = document.getElementById("Navbar_Option");
    var btns = header.getElementsByClassName("navbar-btn");
    for (var i = 0; i < btns.length; i++) {
        btns[i].addEventListener("click", function () {
            var current = document.getElementsByClassName("active");
            if (current.length > 0) {
                current[0].className = current[0].className.replace(" active", "");
            }
            this.className += " active";
        });
    }
</script>






